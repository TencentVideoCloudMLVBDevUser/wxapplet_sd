.sketchpad-box {
  position: relative;
  vertical-align: middle;
}
.fullscreen-box-normal {
  position: absolute;
  width: 100vw;
  height: 10vw;
  bottom: 0;
  left: 0;
  color: white;
  opacity: 0.5;
  background-color: black;
}
.fullscreen-box-fullscreen {
